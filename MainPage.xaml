<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieExplorer.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Movie Explorer">

    <VerticalStackLayout Padding="12" Spacing="10">

        <Label Text="🎬 Movie Explorer" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="SearchEntry"
               Placeholder="Search by title..."
               TextChanged="OnSearchChanged" />

        <CollectionView x:Name="MoviesView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding Emoji}" FontSize="28" />
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label Text="{Binding Year}" FontSize="12" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieExplorer"
    xmlns:pages="clr-namespace:MovieExplorer.Pages"
    Title="MovieExplorer">

    <TabBar>
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" />

        <ShellContent Title="History"
                      ContentTemplate="{DataTemplate pages:HistoryPage}"
                      Route="HistoryPage" />

        <ShellContent Title="Settings"
                      ContentTemplate="{DataTemplate pages:SettingsPage}"
                      Route="SettingsPage" />

        <ShellContent Title="Favourites"
              ContentTemplate="{DataTemplate pages:FavouritesPage}"
              Route="FavouritesPage" />
    </TabBar>

</Shell>
